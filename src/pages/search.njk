<div class="search-page">
  <div id="search-results"></div>
</div>

{%- css "local" -%}
  .search-page {
    min-height: 60vh;
  }

  /* Pagefind UI overrides for search page */
  .search-page .pagefind-ui {
    --pagefind-ui-scale: 1;
    --pagefind-ui-primary: var(--color-primary);
    --pagefind-ui-text: var(--color-text);
    --pagefind-ui-background: var(--color-bg);
    --pagefind-ui-border: var(--color-bg-accent-2);
    --pagefind-ui-tag: var(--color-bg-accent);
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: var(--border-radius-small);
    --pagefind-ui-font: inherit;
  }

  .search-page .pagefind-ui__search-input {
    font-size: var(--size-step-0) !important;
    padding: var(--space-s) !important;
  }

  .search-page .pagefind-ui__result {
    padding: var(--space-s) !important;
    border-bottom: 1px solid var(--color-bg-accent) !important;
  }

  .search-page .pagefind-ui__result:hover {
    background-color: var(--color-bg-accent) !important;
  }

  .search-page .pagefind-ui__result-link {
    font-size: var(--size-step-1) !important;
    font-weight: var(--font-bold) !important;
    color: var(--color-text) !important;
  }

  .search-page .pagefind-ui__result-link:hover {
    color: var(--color-primary) !important;
  }

  .search-page .pagefind-ui__result-excerpt {
    margin-block-start: var(--space-2xs) !important;
    color: var(--color-text-accent) !important;
  }

  .search-page .pagefind-ui__result-title {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .search-page .pagefind-ui__button {
    background-color: var(--color-primary) !important;
    color: white !important;
    border: none !important;
    padding: var(--space-xs) var(--space-m) !important;
    border-radius: var(--border-radius-small) !important;
    cursor: pointer;
  }

  .search-page .pagefind-ui__button:hover {
    opacity: 0.9;
  }

  .search-page .pagefind-ui__message {
    color: var(--color-text-accent) !important;
    padding: var(--space-m) 0 !important;
  }
{%- endcss -%}

{%- js "defer" -%}
(function() {
  // Initialize Pagefind UI
  const searchUI = new PagefindUI({
    element: "#search-results",
    showSubResults: true,
    showImages: false,
    pageSize: 10,
    excerptLength: 30,
    placeholder: "Search companies, technologies, regions..."
  });

  // Check for query parameter and trigger search
  const urlParams = new URLSearchParams(window.location.search);
  const query = urlParams.get('q');
  if (query) {
    // Set the search input value and trigger search
    const input = document.querySelector('.pagefind-ui__search-input');
    if (input) {
      input.value = query;
      input.dispatchEvent(new Event('input', { bubbles: true }));
    }
  } else {
    // Auto-focus if no query
    setTimeout(() => {
      const input = document.querySelector('.pagefind-ui__search-input');
      if (input) input.focus();
    }, 100);
  }
})();
{%- endjs -%}
