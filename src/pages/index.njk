---
layout: base
permalink: /index.html
title: 'Remote In Tech'
description: 'Discover remote-friendly companies in tech. Browse 850+ companies hiring remotely worldwide.'
---

{% from "partials/company-card.njk" import companyCard %}

<div class="wrapper flow region">
  {# Hero Section #}
  <header class="hero flow">
    <h1 class="gradient-text">Remote In Tech</h1>
    <p class="hero__tagline">
      Discover <strong>{{ collections.companies.length }}+</strong> remote-friendly companies in tech.
    </p>
    <div class="hero__actions cluster">
      <a href="/companies/" class="button" data-button-variant="primary">Browse All Companies</a>
      <a href="/contributing/" class="button" data-button-variant="outline">Add a Company</a>
    </div>
  </header>

  {# Featured Companies #}
  <section class="home-section region">
    <div class="home-section__header repel">
      <h2>Featured Companies</h2>
      <a href="/companies/" class="home-section__link">View all &rarr;</a>
    </div>
    <div class="company-cards-grid">
      {% for company in collections.featuredCompanies %}
        {{ companyCard(company) }}
      {% endfor %}
    </div>
  </section>

  {# Recently Added #}
  <section class="home-section region">
    <div class="home-section__header repel">
      <h2>Recently Added</h2>
    </div>
    <div class="company-cards-grid">
      {% for company in collections.recentCompanies %}
        {% if loop.index <= 6 %}
        {{ companyCard(company) }}
        {% endif %}
      {% endfor %}
    </div>
  </section>

  {# Browse by Region #}
  <section class="home-section region">
    <div class="home-section__header">
      <h2>Browse by Region</h2>
    </div>
    <div class="region-cards">
      {% set regionData = [
        {key: 'worldwide', label: 'Worldwide'},
        {key: 'americas', label: 'Americas'},
        {key: 'europe', label: 'Europe'},
        {key: 'asia-pacific', label: 'Asia Pacific'},
        {key: 'americas-europe', label: 'Americas & Europe'}
      ] %}
      {% for region in regionData %}
        {% if collections.companiesByRegion[region.key] and collections.companiesByRegion[region.key].length > 0 %}
        <a href="/companies/?region={{ region.key }}" class="region-card">
          <h3 class="region-card__title">{{ region.label }}</h3>
          <p class="region-card__count">{{ collections.companiesByRegion[region.key].length }} companies</p>
        </a>
        {% endif %}
      {% endfor %}
    </div>
  </section>

  {# Browse by Tech Stack #}
  <section class="home-section region">
    <div class="home-section__header">
      <h2>Browse by Tech Stack</h2>
    </div>
    <div class="tech-tags cluster">
      {% set techData = [
        {key: 'javascript', label: 'JavaScript'},
        {key: 'python', label: 'Python'},
        {key: 'ruby', label: 'Ruby'},
        {key: 'go', label: 'Go'},
        {key: 'rust', label: 'Rust'},
        {key: 'java', label: 'Java'},
        {key: 'php', label: 'PHP'},
        {key: 'mobile', label: 'Mobile'},
        {key: 'devops', label: 'DevOps'},
        {key: 'cloud', label: 'Cloud'},
        {key: 'ml', label: 'ML/AI'}
      ] %}
      {% for tech in techData %}
        {% if collections.companiesByTech[tech.key] and collections.companiesByTech[tech.key].length > 0 %}
        <a href="/companies/?tech={{ tech.key }}" class="tech-tag">
          <span class="tech-tag__name">{{ tech.label }}</span>
          <span class="tech-tag__count">{{ collections.companiesByTech[tech.key].length }}</span>
        </a>
        {% endif %}
      {% endfor %}
    </div>
  </section>

  {# Call to Action #}
  <section class="home-cta region">
    <h2>Know a remote company?</h2>
    <p>Help others discover great places to work. Add a company to the list.</p>
    <a href="/contributing/" class="button" data-button-variant="secondary">Contribute on GitHub</a>
  </section>
</div>

{%- css "local" -%}
/* Hero Section */
.hero {
  text-align: center;
  padding-block: var(--space-xl-2xl);
}

.hero__tagline {
  font-size: var(--size-step-1);
  color: var(--color-text-accent);
  max-width: 40ch;
  margin-inline: auto;
}

.hero__tagline strong {
  color: var(--color-primary);
  font-weight: var(--font-bold);
}

.hero__actions {
  justify-content: center;
  margin-block-start: var(--space-l);
}

/* Home Sections */
.home-section {
  --region-space: var(--space-l-xl);
}

.home-section__header {
  margin-block-end: var(--space-m);
  align-items: baseline;
}

.home-section__header h2 {
  font-size: var(--size-step-2);
  margin: 0;
}

.home-section__link {
  font-size: var(--size-step--1);
  color: var(--color-secondary);
}

/* Region Cards */
.region-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: var(--space-m);
}

.region-card {
  background: var(--color-bg-accent);
  padding: var(--space-m);
  border-radius: var(--border-radius-medium);
  text-align: center;
  text-decoration: none;
  color: var(--color-text);
  border: 2px solid transparent;
  transition: border-color var(--transition-duration) var(--transition-timing);
}

.region-card:hover {
  border-color: var(--color-primary);
}

.region-card__title {
  font-size: var(--size-step-0);
  margin-block-end: var(--space-2xs);
}

.region-card__count {
  font-size: var(--size-step--1);
  color: var(--color-text-accent);
  margin: 0;
}

/* Tech Tags */
.tech-tags {
  --gutter: var(--space-xs);
}

.tech-tag {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2xs);
  padding: var(--space-xs) var(--space-s);
  background: var(--color-bg-accent);
  border: 1px solid var(--color-bg-accent-2);
  border-radius: var(--border-radius-small);
  text-decoration: none;
  color: var(--color-text);
  font-size: var(--size-step--1);
  transition: border-color var(--transition-duration) var(--transition-timing),
              background-color var(--transition-duration) var(--transition-timing);
}

.tech-tag:hover {
  border-color: var(--color-primary);
  background: var(--color-bg);
}

.tech-tag__count {
  background: var(--color-primary);
  color: var(--color-light);
  padding: 0.15em 0.5em;
  border-radius: var(--border-radius-small);
  font-size: var(--size-step--2);
  font-weight: var(--font-bold);
}

/* Home CTA */
.home-cta {
  --region-space: var(--space-xl-2xl);
  text-align: center;
  background: var(--color-bg-accent);
  padding: var(--space-xl);
  border-radius: var(--border-radius-medium);
}

.home-cta h2 {
  font-size: var(--size-step-2);
  margin-block-end: var(--space-xs);
}

.home-cta p {
  color: var(--color-text-accent);
  margin-block-end: var(--space-m);
}
{%- endcss -%}
